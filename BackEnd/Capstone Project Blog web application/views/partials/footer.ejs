<script>
  // Function to resize the textarea based on content
  function resizeTextarea(textarea) {
    textarea.style.height = 'auto'; // Reset height to auto to shrink if needed
    textarea.style.height = textarea.scrollHeight + 'px'; // Adjust the height to fit the content
  }

  document.addEventListener('input', function (event) {
    // Check if the target is a textarea with the class 'auto-resize'
    if (event.target.tagName.toLowerCase() === 'textarea' && event.target.classList.contains('auto-resize')) {
      resizeTextarea(event.target); // Resize the textarea on input
    }
  });

  // Resize all textareas on page load to fit content
  window.addEventListener('load', function () {
    const textareas = document.querySelectorAll('.auto-resize');
    textareas.forEach(resizeTextarea); // Apply the resize function to all textareas on page load
  });
</script>
